<Window x:Class="LineHelper.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Settings"
        Height="420" Width="450"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Settings"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Foreground="#333333"
                   Margin="0,0,0,20"/>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Marker Range Setting -->
                <GroupBox Header="Marker Configuration" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Marker Range:"
                                       VerticalAlignment="Center"
                                       Foreground="#555"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBox Name="MarkerRangeTextBox"
                                         Width="80"
                                         Text="{Binding MarkerRange}"
                                         VerticalContentAlignment="Center"
                                         PreviewTextInput="NumberValidationTextBox"
                                         Margin="0,0,10,0"/>
                                <TextBlock Text="(1-9999)"
                                           VerticalAlignment="Center"
                                           Foreground="#888"
                                           FontSize="11"/>
                            </StackPanel>
                        </Grid>

                        <CheckBox Name="AutoResetCheckBox"
                                  Content="Auto-reset when reaching limit"
                                  IsChecked="{Binding AutoResetAtLimit}"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- Keyboard Shortcuts -->
                <GroupBox Header="Keyboard Shortcuts" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <!-- Line In Hotkey -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Line In Shortcut:"
                                       VerticalAlignment="Center"
                                       Foreground="#555"/>

                            <TextBox Grid.Column="1"
                                     Name="LineInHotkeyTextBox"
                                     Text="{Binding LineInHotkeyDisplay}"
                                     IsReadOnly="True"
                                     Background="#FAFAFA"
                                     VerticalContentAlignment="Center"
                                     Margin="0,0,10,0"/>

                            <Button Grid.Column="2"
                                    Name="ChangeLineInButton"
                                    Content="Change..."
                                    Click="ChangeLineInButton_Click"
                                    Style="{StaticResource SecondaryButton}"
                                    Width="80"/>
                        </Grid>

                        <!-- Line Out Hotkey -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Line Out Shortcut:"
                                       VerticalAlignment="Center"
                                       Foreground="#555"/>

                            <TextBox Grid.Column="1"
                                     Name="LineOutHotkeyTextBox"
                                     Text="{Binding LineOutHotkeyDisplay}"
                                     IsReadOnly="True"
                                     Background="#FAFAFA"
                                     VerticalContentAlignment="Center"
                                     Margin="0,0,10,0"/>

                            <Button Grid.Column="2"
                                    Name="ChangeLineOutButton"
                                    Content="Change..."
                                    Click="ChangeLineOutButton_Click"
                                    Style="{StaticResource SecondaryButton}"
                                    Width="80"/>
                        </Grid>

                        <TextBlock Text="Press Escape to cancel key recording"
                                   FontStyle="Italic"
                                   Foreground="#888"
                                   FontSize="11"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- Appearance -->
                <GroupBox Header="Appearance" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Theme:"
                                       VerticalAlignment="Center"
                                       Foreground="#555"/>

                            <ComboBox Grid.Column="1"
                                      Name="ThemeComboBox"
                                      HorizontalAlignment="Left"
                                      Width="120"
                                      SelectedValue="{Binding Theme}">
                                <ComboBoxItem Content="Light"/>
                                <ComboBoxItem Content="Dark"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    Name="SaveButton"
                    Content="Save"
                    Click="SaveButton_Click"
                    IsDefault="True"
                    Style="{StaticResource PrimaryButton}"
                    Width="100"
                    Margin="0,0,10,0"/>

            <Button Grid.Column="2"
                    Name="CancelButton"
                    Content="Cancel"
                    Click="CancelButton_Click"
                    IsCancel="True"
                    Style="{StaticResource SecondaryButton}"
                    Width="100"/>
        </Grid>
    </Grid>
</Window>